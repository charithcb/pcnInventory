{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019"],
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node", "express"]
  },
  "include": ["src", "src/@types"]
}






